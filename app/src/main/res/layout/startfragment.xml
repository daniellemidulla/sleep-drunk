<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:gravity="center"
           android:text="@string/sleep_time"
           android:layout_margin="25dp"
           android:id="@+id/welcomeMessage">
        </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/welcome_part2"
        android:layout_margin="10dp"
        android:id="@+id/welcomeTakeTheTest" />

    <!--<EditText
            android:id="@+id/editSleeptime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="@string/ui_profile_sleep_hint"
            android:inputType="phone"
            android:singleLine="true" >
        </EditText>-->


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageButton
            android:src="@drawable/sleep"
            android:background="@drawable/round_button"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/btnStart"
            android:layout_gravity="center" />


            <TextView
                android:background="@drawable/speech_bubble"
                android:layout_width="183dp"
                android:layout_height="184dp"
                android:text="@string/welcome_speech_bubble_text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/textView" />

    </FrameLayout>

</LinearLayout>