<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    

                
    <PreferenceCategory
            android:title="@string/additional_based_preferences">
            
                <EditTextPreference
                android:key="name_preference"
                android:title="@string/title_name_preference"
                android:summary="@string/summary_name_preference"
                android:dialogTitle="@string/dialog_title_name_preference" 
                android:inputType="text"
                />
              
            <ListPreference
                android:key="gender_list_preference"
                android:title="@string/title_gender_list_preference"
                android:summary="@string/summary_gender_list_preference"
                android:entries="@array/entries_gender_list_preference"
                
                android:entryValues="@array/entryvalues_gender_list_preference"
                android:defaultValue="Male"
                android:dialogTitle="@string/dialog_title_gender_list_preference" />
                

                
        <EditTextPreference
                android:key="height_preference"
                android:title="@string/title_height_preference"
                android:summary="@string/summary_height_preference"
                android:dialogTitle="@string/dialog_title_height_preference" 
                android:inputType="numberDecimal"/>
        <EditTextPreference
                android:key="weight_preference"
                android:title="@string/title_weight_preference"
                android:summary="@string/summary_weight_preference"
                android:dialogTitle="@string/dialog_title_weight_preference" 
                android:inputType="number"/>

    </PreferenceCategory>


    

    
</PreferenceScreen>

